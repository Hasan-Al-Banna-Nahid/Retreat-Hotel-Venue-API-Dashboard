generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Venue {
  id          String   @id @default(cuid())
  name        String
  description String?
  city        String
  capacity    Int
  pricePerNight Int
  images      String[]
  amenities   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings    BookingInquiry[]

  @@map("venues")
}

model BookingInquiry {
  id           String   @id @default(cuid())
  venueId      String
  companyName  String
  email        String
  startDate    DateTime
  endDate      DateTime
  attendeeCount Int
  status       BookingStatus @default(PENDING)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  venue        Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@map("booking_inquiries")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  REJECTED
}